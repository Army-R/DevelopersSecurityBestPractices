.page
    h1, h2, h3
        &:before
            color main
            font-weight 300
            margin-right 10px
    h1
        margin 0
        font-size rem(30px)
        +above(cut)
            font-size rem(70px)
        &:before
            color main
            font-size rem(40px)
    .page-title
        text-align center

        &:before
            content ""

        margin-bottom: rem(20px)

    .time
        text-align center
        margin-top 30px
        mainFont(300)
    .music-read
        text-align center
.page-content
    padding rem(16px) 0
    img
        max-width 100%
        margin rem(30px) auto
        display block
    p, h1, h2, h3, h4,ul,ol, .tags, iframe
        max-width 60%
        padding 0 rem(20px)
        margin 0 auto rem(30px)
        mainFont(300)
        font-size rem(18px)
        line-height 2
        letter-spacing 0.01rem
        +above(cut)
            font-size rem(20px)

    h1,h2,h3,h4,h5
        mainFont(800)
    h1
        font-size rem(30px)
        line-height 1.4
        font-weight normal
        color accent_color

    h2
        font-size rem(26px)
        line-height 1.4
        font-weight bold

    h3
        font-size rem(24px)
        line-height 1.4

    p,li
        color texts
        code
            color colorcode
    a
        mainFont(300)
        color main
        text-decoration none
        border-bottom 2px solid main
        &:hover
            background-color mainHover
    iframe
        margin-top rem(30px)
        width 100%
    #twitter-widget-0
        margin auto !important
    h1,h2,h3,h4,h5
        mainFont(800)
    h1
        font-size rem(30px)
        line-height 1.4
        +above(cut)
            font-size rem(45px)
    h2
        font-size rem(22px)
        line-height 1.4
        &:before
            content '##'
            font-size rem(25px)
        +above(cut)
            font-size rem(35px)
    h3
        font-size rem(18px)
        line-height 1.4
        +above(cut)
            font-size rem(25px)
    ul,ol
        padding-left rem(40px)
    ul.page-list
        padding 0
        +below(cut)
            padding 0 rem(20px)
    blockquote
        center(rem(730px))
        border-left rem(5px) solid main
        padding 0 rem(30px)
        margin rem(50px) auto
        +below(cut)
            width 70%
        p
            color rgba(0,0,0,0.6)
            margin 0
            +below(cut)
                font-size rem(18px)
                line-height 1.5
                padding 0
    hr
        center(rem(760px))
        border 1px solid lightGray
        margin 50px auto
    .about_perfil
        width 200px

    pre
        max-width 60%
        padding rem(20px)
        margin 0 auto rem(30px)

    .asciicast
        padding rem(20px) !important
